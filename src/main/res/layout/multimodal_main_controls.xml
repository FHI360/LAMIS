<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/multimodal_capture_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">


        <Button
            android:id="@+id/multimodal_button_capture"
            android:layout_width="121dp"
            android:layout_height="50dp"
            android:background="@drawable/round_button"
            android:drawableLeft="@android:drawable/ic_menu_camera"
            android:gravity="center"
            android:text="capture"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/multimodal_stop_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone">

        <Button
            android:id="@+id/multimodal_button_stop"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:drawableLeft="@android:drawable/ic_menu_camera"
            android:gravity="center"
            android:text="@string/msg_stop" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/multimodal_success_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/multimodal_success_controls_first_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/multimodal_button_add"
                android:layout_width="00dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:drawableLeft="@android:drawable/ic_menu_add"
                android:text="Add" />

            <Button
                android:id="@+id/multimodal_button_discard"
                android:layout_width="0dip"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:drawableLeft="@android:drawable/ic_menu_close_clear_cancel"
                android:text="Finish" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/multimodal_success_controls_second_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/multimodal_button_retry"
                android:layout_width="0dip"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:drawableLeft="@android:drawable/ic_menu_revert"
                android:text="Retry" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="5dp"
                android:id="@+id/position"
                android:text="Position" />

            <Spinner
                android:id="@+id/multimodal_button_unbound"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/bg_dropdown"
                android:textAlignment="center" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>